<div class="terminal-window">
  <div class="terminal-header">
    <div class="buttons">
      <span class="close"></span>
      <span class="minimize"></span>
      <span class="maximize"></span>
    </div>
    <div class="title">user_profile.py</div>
  </div>
  <div class="terminal-body">
    <slot />
  </div>
</div>

<style>
  .terminal-window {
    background-color: #1e1e1e;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    font-family: 'Fira Code', monospace;
    overflow: hidden;
    margin: 2rem 0;
    width: 100%;
    max-width: 600px;
  }

  .terminal-header {
    background-color: #2d2d2d;
    padding: 10px 15px;
    display: flex;
    align-items: center;
    position: relative;
  }

  .buttons {
    display: flex;
    gap: 8px;
  }

  .buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
  }

  .close { background-color: #ff5f56; }
  .minimize { background-color: #ffbd2e; }
  .maximize { background-color: #27c93f; }

  .title {
    color: #999;
    font-size: 14px;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .terminal-body {
    padding: 20px;
    color: #d4d4d4;
    font-size: 14px;
    line-height: 1.5;
    overflow-x: auto;
  }
</style>
