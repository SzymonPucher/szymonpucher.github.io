---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import LanguagePicker from './LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header>
	<nav>
		<div class="title-wrapper">
			<h2><a href={`/${lang}/`}>{SITE_TITLE}</a></h2>
			<span class="tagline">Building maintainable software quickly.</span>
		</div>
		<div class="internal-links">
			<HeaderLink href={`/${lang}/`}>{t('nav.home')}</HeaderLink>
			<HeaderLink href={`/${lang}/projects`}>{t('nav.projects')}</HeaderLink>
			<HeaderLink href={`/${lang}/blog`}>{t('nav.blog')}</HeaderLink>
			<HeaderLink href={`/${lang}/contact`}>{t('nav.contact')}</HeaderLink>
		</div>
		<div class="right-section">
			<LanguagePicker />
			<div class="social-links">
				<a href="https://github.com/szymonpucher" target="_blank">
					<span class="sr-only">Go to GitHub repo</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path></svg
					>
				</a>
				<a href="https://www.linkedin.com/in/spucher" target="_blank">
					<span class="sr-only">Go to LinkedIn</span>
					<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
						></path></svg
					>
				</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1.5em;
	}
	.title-wrapper {
		display: flex;
		flex-direction: column;
		line-height: 1.2;
		padding: 1em 0;
		align-items: flex-start;
	}
	.tagline {
		font-size: 0.7em;
		color: rgb(var(--gray));
		font-weight: 500;
	}
	nav h2 a,
	nav h2 a.active {
		text-decoration: none;
		padding: 0;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.right-section {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 800px) {
		nav {
			flex-wrap: wrap;
			justify-content: center;
		}
		.title-wrapper {
			order: 1;
			width: 100%;
			align-items: center;
			text-align: center;
			padding-bottom: 0.5em;
		}
		.right-section {
			order: 2;
			width: 100%;
			justify-content: center;
			align-items: center;
		}
		.internal-links {
			order: 3;
			width: 100%;
			display: flex;
			justify-content: center;
		}
		.social-links {
			/* display: none; */
		}
	}
</style>
